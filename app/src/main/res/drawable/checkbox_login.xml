<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <size android:width="32dp" android:height="32dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_circle_selected" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <size android:width="32dp" android:height="32dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_circle_unselected" />
        </layer-list>
    </item>
</selector>